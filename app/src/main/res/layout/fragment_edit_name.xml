<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment to edit a group's name -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivityScreens.EditNameFragment"
    android:orientation="vertical">
    <TextView
        android:id="@+id/group_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_name_header"
        android:textSize="@dimen/standard_header2_size"/>
    <EditText
        android:id="@+id/group_name_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_header2_size"/>
    <Button
        android:id="@+id/update_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_group_name"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>