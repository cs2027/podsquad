<?xml version="1.0" encoding="utf-8"?>
<!-- Layout file defining a single message;
 part of the 'RecyclerView' object in the <fragment_message.xml> file -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_row"
    android:padding="@dimen/paddingTop">
    <TextView
        android:id="@+id/message_row_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"/>
    <TextView
        android:id="@+id/message_row_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/rowPaddingTop"/>
</LinearLayout>